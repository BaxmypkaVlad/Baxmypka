puts "(S)cissors,(P)aper,(R)ock "
puts "Сделайте выбор:"
@answer=gets.strip.capitalize
def playerchoice
    if @answer=="S"
        puts "Вы выбрали ножницы"
        return :scissors
    elsif
        @answer=="P"
        puts "Вы выбрали бумагу"
        return :paper
    elsif
        @answer=="R"
        puts "Вы выбрали камень"
        return :rock
    end
end
